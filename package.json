{
  "name": "contler-hotel",
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "dev": "concurrently \"npm run dev:build\" \"npm run dev:ng\" \"npm run dev:electron\"",
    "dev:ng": "ng serve",
    "dev:build": "webpack --mode development --watch",
    "dev:electron": "wait-on http://localhost:4200 dist-electron/main.js && electronmon .",
    "electron:build:qa:mac": "npm run build -- -c development && webpack --mode production && electron-builder build --mac",
    "electron:build:prod:mac": "npm run build && webpack --mode production && electron-builder build --mac",
    "electron:build:qa:win": "npm run build -- -c development && webpack --mode production && electron-builder build --win --target portable",
    "electron:build:prod:win": "npm run build && webpack --mode production && electron-builder build --win --target portable"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.3.10",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/fire": "^17.1.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.3.10",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@aracna/fcm": "^1.0.28",
    "firebase": "^10.13.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.8",
    "@angular/cli": "^17.0.8",
    "@angular/compiler-cli": "^17.0.0",
    "@electron/remote": "^2.1.2",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "autoprefixer": "^10.4.20",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3",
    "esbuild-loader": "^4.2.2",
    "eslint": "^9.9.1",
    "eslint-webpack-plugin": "^4.2.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "ts-loader": "^9.5.1",
    "typescript": "~5.2.2",
    "wait-on": "^8.0.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "build": {
    "appId": "com.contler.hotel",
    "productName": "Contler",
    "files": [
      "dist-electron/**",
      "build/**",
      "!node_modules",
      "!src",
      "package.json",
      "!.angular"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "portable",
        "zip"
      ],
      "icon": "build/icon.ico"
    }
  }
}
